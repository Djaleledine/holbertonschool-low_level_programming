#include <stdio.h>
#include "main.h"
/**
 * print_sign - cheks if it is positive or neg
 * @n: is the number being checked
 * Description: Checks if the number is
 * positive or not
 *
 * Return: 1 if letter else 0
 */
int print_sign(int n)
{
	if (n > 0)
	{
		_putchar('+');
		return (1);
	}
	else if (n < 0)
	{
		_putchar('-');
		return (-1);
	}
	else
	{
		_putchar('0');
		return (0);
	}
}
